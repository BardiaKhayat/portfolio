  .flip {
  background: rgba(120,186,178,0.3);
  background: linear-gradient(90deg, rgba(120,186,178,0.3) 0%, rgba(89,44,77,0.3) 100%, rgba(0,0,0,0.3) 100%);
  width:100%;
  font-family:Audiowide;
  font-size:1.875em;
  padding:10px;
  border-radius:10px;
  }
  .flip:hover {
  box-shadow: 0 0 5px white;
  background-image: linear-gradient(to right, rgba(255,0,0,0), rgba(118,12,156,100));
  }
  .leftPanel {
	   display:none;
    }
  #leftFlip{
		border:5px inset rgba(118,12,156,100); 
		height:100%; 
		font-family:Audiowide; 
		font-size:0.9em; 
		background:url('side.jpg');
		background-size:cover; 
		background-repeat:no-repeat;
	    box-shadow: 0 0 5px white;
  }
  #leftFlip:hover {
	    box-shadow: 0 0 8px white;
  }
  #photoMiddle {
  border:5px inset rgba(118,12,156,100); 
  border-radius:10px; background:url('photo.jpg'); 
  background-size:cover; 
  background-repeat:no-repeat;
  animation-name: photoMiddleAnimation;
  animation-duration: 2s;
  }
  @keyframes photoMiddleAnimation {
  from {opacity:0;}
  to {opacity:1;}
  }
  #photoSide {
  animation-name: photoSideAnimation;
  animation-duration: 2s;
  }
  @keyframes photoSide {
  from {opacity:0;}
  to {opacity:1;}
  }
